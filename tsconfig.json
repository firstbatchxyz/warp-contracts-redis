{
  "compilerOptions": {
    "target": "es2019",
    "types": ["jest", "node"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "allowJs": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
